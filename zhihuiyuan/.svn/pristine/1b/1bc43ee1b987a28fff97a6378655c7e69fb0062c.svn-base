$(function(){

	$('#one').change(function(){	
		$.ajax({
			url:ThinkPHP['ROOT']+'/Admin/News/update',
			type:'POST',
			data:{
				content1:$('#one').val(),
			},
			success:function(data){
				$('#tow').html(data);
      		}
		});
	});
	$('#tow').change(function(){	
		$.ajax({
			url:ThinkPHP['ROOT']+'/Admin/News/update',
			type:'POST',
			data:{
				content1:$('#one').val(),
				content2:$('#tow').val(),
			},
			success:function(data){
				$('#sthree').html(data);
      		}
		});
	});
	$('#sthree').change(function(){	
		$.ajax({
			url:ThinkPHP['ROOT']+'/Admin/News/update',
