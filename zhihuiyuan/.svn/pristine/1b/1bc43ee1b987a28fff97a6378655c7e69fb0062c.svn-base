				content2:$('#tow').val(),
				content3:$('#sthree').val(),
			},
			success:function(data){
				$('#four').html(data);
      		}
		});
	});
	$('#four').change(function(){	
		$.ajax({
			url:ThinkPHP['ROOT']+'/Admin/News/update',
			type:'POST',
			data:{
				content1:$('#one').val(),
				content2:$('#tow').val(),
				content3:$('#sthree').val(),
				content4:$('#four').val(),
			},
			success:function(data){
				$('#five').html(data);
      		}
		});
	});
	$('#five').change(function(){	
		$.ajax({
			url:ThinkPHP['ROOT']+'/Admin/News/update',
			type:'POST',
			data:{
				content1:$('#one').val(),
				content2:$('#tow').val(),
				content3:$('#sthree').val(),
				content4:$('#four').val(),
				content3:$('#five').val(),
			},
			success:function(data){
				$('#editor_id').val(data);
      		}
		});
	});
		
});







