$(function(){

	//二级列表动态显示

	$('#one').on('click','option',function(){
		$.ajax({
			url:ThinkPHP['ROOT']+'/Admin/Index/addtype',
			type:'POST',
			data:{
				content1:$('#one').val(),
			},
			success:function(data){
				$("#tow option").remove();
      			$("#tow").append(data);	
      		},
		});



		
	});


	//三级列表动态显示

	$('#tow').on('click','option',function(){
		$.ajax({
			url:ThinkPHP['ROOT']+'/Admin/Index/addtype',
			type:'POST',
			data:{
				content1:$('#one').val(),
				content2:$('#tow').val(),
			},
			success:function(data){
				$("#tow option").remove();
      			$("#tow").append(data);	
      		},
		});
	});





});
