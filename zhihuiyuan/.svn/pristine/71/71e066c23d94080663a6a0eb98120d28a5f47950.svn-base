<extend name="Base/common" />
<block name="head">
</block>
<block name="main">
	<!-- 导航开始 -->
	<meta charset="UTF-8">
	<div id="content">
		<div id="nav">
			<div class="nav_side">
				<dl>
				{$typeStr}
				</dl>
			</div>
			<div class="banner">
				<ul class="nav_top">
					<li><a class="active" href="__ROOT__/Index/index">首页</a></li>
					<li><a href="__ROOT__/Company/index">企业百科</a></li>
					<li><a href="__ROOT__/News/index">集群动态区</a></li>
					<li><a href="#">讨论区</a></li>
					<li><a href="__ROOT__/Contact/index">联系我们</a></li>
				</ul>
				<div class="banner_pic">
					<ul class="banner_pic_list">
						<li>
							<a href="javascript:;"><img src="__IMG__/1.png" alt=""></a>
						</li>
						<li>
							<a href="javascript:;"><img src="__IMG__/2.png" alt=""></a>
						</li>
						<li>
							<a href="javascript:;"><img src="__IMG__/3.jpg" alt=""></a>
						</li>
						<li>
							<a href="javascript:;"><img src="__IMG__/4.png" alt=""></a>
						</li>
						<li>
							<a href="javascript:;"><img src="__IMG__/5.jpg" alt=""></a>
						</li>
						<li>
							<a href="javascript:;"><img src="__IMG__/6.png" alt=""></a>
						</li>
					</ul>
					<div class="banner_pic_nav">
						<span class="active">1</span>
						<span>2</span>
						<span>3</span>
						<span>4</span>
						<span>5</span>
						<span>6</span>
					</div>
				</div>
			</div>
		</div>
		<div class="seg"></div>
		<div class="pic_info">
			<div class="title">
				<h2>两化融合企业升级</h2>
				<a href="#">更多</a>
			</div>



			<div class="pic_box">
				<ul class="pic_list">
					<foreach name="datas" item="v" >
						<if condition="$v.id eq 1">
							<li>
								<a href="http://www.zady.cn/aqpt" target="_blank">
									<img src="__UPLOADS__/{$v.pic}.png" alt="">
									<p>{$v.dataname}</p>
								</a>
							</li>
						<else/>
							<li>
								<a href="__ROOT__/Index/commitList2/id/{$v.id}">
									<img src="__UPLOADS__/{$v.pic}.png" alt="">
									<p>{$v.dataname}</p>
								</a>
							</li>
						</if>
					</foreach>				
				</ul>
			</div>



			<span class="prey"></span>
			<span class="next"></span>
		</div>
		<div class="pic_info">
			<div class="title">
				<h2>总裁教练集群统帅</h2>
				<a href="#">更多</a>
			</div>
			<div class="J_Poster poster-main" data-setting='{
	            "width":952,
	            "height":285,
	            "posterWidth":450,
	            "posterHeight":285,
	            "scale":0.9,
	            "speed":1000,
	            "autoPlay":true,
	            "delay":3000,
	            "verticalAlign":"middle"
	        }'>
		        <ul class="poster-list">


		        <foreach name="datas2" item="v" >
		            <li class="poster-item"><a href="__ROOT__/Index/commitList2/id/{$v.id}"><img src="__UPLOADS__/{$v.pic}.png" width="100%" height="100%"></a></li>
		        </foreach>
		  
		        </ul>
		    </div>
			<span class="prey"></span>
			<span class="next"></span>
		</div>
		<script>
			// 设置ul长度
			var aul = $('#content .pic_info .pic_list');
			var aw = aul.find('li').outerWidth(true);
			aul.css({'width':aw*aul.find($('li')).length});
		</script>

	</div>

	<!-- 导航结束 -->
</block>