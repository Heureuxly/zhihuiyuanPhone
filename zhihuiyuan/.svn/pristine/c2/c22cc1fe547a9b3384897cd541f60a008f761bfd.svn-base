	<script src="__JS__/dtree.js"></script>
	<style>
		.ua li { width:600px; height: 50px; border-bottom: 1px solid #000000;}
		.ua  { width:600px; border:1px solid #000000 ; border-bottom: none; margin: 0 auto;list-style: none; padding: 0px;}
		.ua div { float:left; height: 50px; line-height: 50px; text-align: center;}
		.user{width: 100px; border-right: 1px solid #000000;}
		.password{width:399px;border-right: 1px solid #000000;}
		.state{ width: 99px; }
	</style>
</head>
<body>
	<div id="header"></div>

<div id="contain" class="clear">
	<p class="contain_nav">后台管理： 管理首页</p>
	<div class="contain_side">
		<script>
			function hello()
		    {
			    d = new dTree('d');

			    d.add(0,-1,'后台管理','');

			    d.add(1,0,'重新登陆','../index.php');

			    d.add(2,0,'新闻管理','');
