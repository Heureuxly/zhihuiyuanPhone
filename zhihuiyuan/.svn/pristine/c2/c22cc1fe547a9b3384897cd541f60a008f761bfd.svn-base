			    d.add(4,0,'用户管理','');
			    d.add(41,4,'添加用户','adduser.phdp');
			        
			    d.add(5,0,'返回首页','index.php');

			    document.write(d);
		    }

		    hello();
		</script>
	</div>
	<div class="contain_main">
	<ul class="ua">
		<li class="title">
			<div class="user">账户</div>
			<div class="password">密码</div>
			<div class="state">会员等级</div>
		</li>
		<foreach name="us" item="v">
		<li>
			<fe>
			<div class="user">{$v.uname}</div>
			<div class="password">{$v.password}</div>
			<div class="state">{$v.state}</div>
		</li>
		</foreach>
		
	</ul>
	</div>
	
</body>
